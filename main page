        <!-- Main Content -->
        <div class="main-content">
            <!-- Tracker Card -->
            <div class="tracker-card">
                <h2><i class="fas fa-search"></i> Track Your Job</h2>
                <p class="form-group">Enter your job number to check the current status, completion date, and updates.</p>
                
                <div class="form-group">
                    <label for="jobNumber"><i class="fas fa-hashtag"></i> Job Number</label>
                    <div class="input-with-button">
                        <input 
                            type="text" 
                            id="jobNumber" 
                            placeholder="e.g., JOB-2024-001 or INV-001"
                            autocomplete="off"
                            autocapitalize="characters"
                        >
