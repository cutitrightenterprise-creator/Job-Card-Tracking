    <script>
        // Configuration - REPLACE WITH YOUR GOOGLE APPS SCRIPT URL
        const GOOGLE_SCRIPT_URL = "https://script.google.com/macros/s/ABCDEFG1234567/exec";
        
        // Status mapping
        const STATUS_CLASSES = {
            'In Progress': 'status-in-progress',
            'Completed': 'status-completed', 
            'Pending': 'status-pending',
            'Ready': 'status-ready',
            'Awaiting Parts': 'status-pending',
            'Quality Check': 'status-in-progress',
            'Shipped': 'status-completed',
            'Delivered': 'status-completed'
        };
        
        // Initialize
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        
        // Track job function
        async function trackJob() {
            const jobNumber = document.getElementById('jobNumber').value.trim();
            const loading = document.getElementById('loading');
            const error = document.getElementById('error');
            const results = document.getElementById('results');
            const errorMessage = document.getElementById('errorMessage');
            
            // Reset UI
            error.style.display = 'none';
            results.style.display = 'none';
            
            // Validate
            if (!jobNumber) {
                showError('Please enter a job number');
                return;
            }
            
            // Show loading
            loading.style.display = 'block';
            
            try {
                // Call Google Apps Script API
                const response = await fetch(`${GOOGLE_SCRIPT_URL}?jobNumber=${encodeURIComponent(jobNumber)}`);
                const data = await response.json();
                
                // Hide loading
                loading.style.display = 'none';
                
                if (data.success && data.data) {
                    displayResults(data.data);
                } else {
                    showError(data.message || 'Job not found. Please check your job number.');
                }
                
            } catch (err) {
                loading.style.display = 'none';
                showError('Unable to connect. Please check your internet and try again.');
                console.error('API Error:', err);
            }
        }
        
        function displayResults(job) {
            const jobDetails = document.getElementById('jobDetails');
            const results = document.getElementById('results');
            
            // Determine status class
            const statusClass = getStatusClass(job.status);
            
            // Format dates
            const formatDate = (dateStr) => {
                if (!dateStr) return 'To be confirmed';
                try {
                    return new Date(dateStr).toLocaleDateString('en-ZA', {
                        day: 'numeric',
                        month: 'short',
                        year: 'numeric'
                    });
                } catch {
                    return dateStr;
                }
            };
            
            // Generate HTML
            jobDetails.innerHTML = `
                <div class="status-item">
                    <div class="status-label">Job Number</div>
                    <div class="status-value">${escapeHtml(job.jobNumber)}</div>
                </div>
                
                <div class="status-item">
                    <div class="status-label">Current Status</div>
                    <div class="status-value">
                        ${escapeHtml(job.status)}
                        <div class="status-badge ${statusClass}">
                            ${escapeHtml(job.status)}
                        </div>
                    </div>
                </div>
                
                <div class="status-item">
                    <div class="status-label">Last Updated</div>
                    <div class="status-value">${formatDate(job.lastUpdated)}</div>
                </div>
                
                <div class="status-item">
                    <div class="status-label">Estimated Completion</div>
                    <div class="status-value">${formatDate(job.estimatedCompletion)}</div>
                </div>
                
                ${job.notes ? `
                <div class="status-item" style="grid-column: 1 / -1;">
                    <div class="status-label">Latest Update</div>
                    <div class="status-value" style="font-weight: normal;">
                        <i class="fas fa-sticky-note"></i> ${escapeHtml(job.notes)}
                    </div>
                </div>
                ` : ''}
            `;
            
            // Show results
            results.style.display = 'block';
            results.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
        
        function getStatusClass(status) {
            if (!status) return 'status-in-progress';
            
            const statusLower = status.toLowerCase();
            for (const [key, className] of Object.entries(STATUS_CLASSES)) {
                if (statusLower.includes(key.toLowerCase())) {
                    return className;
                }
            }
            return 'status-in-progress';
        }
        
        function showError(message) {
            const error = document.getElementById('error');
            const errorMessage = document.getElementById('errorMessage');
            
            errorMessage.textContent = message;
            error.style.display = 'block';
            error.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Enter key support
        document.getElementById('jobNumber').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                trackJob();
            }
        });
        
        // URL parameter support (optional)
        window.addEventListener('DOMContentLoaded', function() {
            const params = new URLSearchParams(window.location.search);
            const jobParam = params.get('job');
            if (jobParam) {
                document.getElementById('jobNumber').value = jobParam;
                // Auto-track after a delay if needed
                // setTimeout(() => trackJob(), 1000);
            }
        });
    </script>
</body>
