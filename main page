    <script>
        // IMPORTANT: REPLACE THIS WITH YOUR GOOGLE APPS SCRIPT URL
        const API_URL = "YOUR_GOOGLE_APPS_SCRIPT_URL_HERE";
        
        // Status color mapping
        const statusColors = {
            'In Progress': 'status-in-progress',
            'Ready for Collection': 'status-ready',
            'Pending': 'status-pending',
            'Completed': 'status-completed',
            'Awaiting Parts': 'status-pending',
            'Quality Check': 'status-in-progress',
            'Delivered': 'status-completed'
        };
        
        function getStatusClass(status) {
            const statusKey = Object.keys(statusColors).find(key => 
                status.toLowerCase().includes(key.toLowerCase())
            );
            return statusColors[statusKey] || 'status-in-progress';
        }
        
        function formatDate(dateString) {
            if (!dateString) return 'Not specified';
            
            try {
                const date = new Date(dateString);
                if (isNaN(date.getTime())) return dateString;
                
                return date.toLocaleDateString('en-ZA', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            } catch (e) {
                return dateString;
            }
        }
        
        async function trackJob() {
            const jobNumber = document.getElementById('jobNumber').value.trim();
            const loading = document.getElementById('loading');
            const errorMessage = document.getElementById('errorMessage');
            const resultContainer = document.getElementById('resultContainer');
            const jobDetails = document.getElementById('jobDetails');
            
            // Reset UI
            errorMessage.style.display = 'none';
            resultContainer.style.display = 'none';
            
            // Validate input
            if (!jobNumber) {
                showError('Please enter a job number');
                return;
            }
            
            // Show loading
            loading.style.display = 'block';
            
            try {
                // Call Google Apps Script API
                const response = await fetch(`${API_URL}?jobNumber=${encodeURIComponent(jobNumber)}`);
                const data = await response.json();
                
                // Hide loading
                loading.style.display = 'none';
                
                if (data.success && data.data) {
                    displayJobDetails(data.data);
                } else {
                    showError(data.message || 'Job not found. Please check your job number.');
                }
                
            } catch (error) {
                loading.style.display = 'none';
                showError('Network error. Please check your connection and try again.');
                console.error('Error:', error);
            }
        }
        
        function displayJobDetails(job) {
            const jobDetails = document.getElementById('jobDetails');
            const resultContainer = document.getElementById('resultContainer');
            
            // Generate HTML for job details
            jobDetails.innerHTML = `
                <div class="detail-box">
                    <div class="detail-label">Job Number</div>
                    <div class="detail-value">${escapeHtml(job.jobNumber)}</div>
                </div>
                
                <div class="detail-box">
                    <div class="detail-label">Current Status</div>
                    <div class="detail-value">
                        ${escapeHtml(job.status)}
                        <div class="status-badge ${getStatusClass(job.status)}">
                            ${escapeHtml(job.status)}
                        </div>
                    </div>
                </div>
                
                <div class="detail-box">
                    <div class="detail-label">Last Updated</div>
                    <div class="detail-value">${formatDate(job.lastUpdated)}</div>
                </div>
                
                <div class="detail-box">
                    <div class="detail-label">Estimated Completion</div>
                    <div class="detail-value">${formatDate(job.estimatedCompletion)}</div>
                </div>
                
                ${job.notes ? `
                <div class="detail-box" style="grid-column: 1 / -1;">
                    <div class="detail-label">Notes</div>
                    <div class="detail-value" style="font-weight: normal; font-size: 1.1rem;">
                        ${escapeHtml(job.notes)}
                    </div>
                </div>
                ` : ''}
            `;
            
            // Show results
            resultContainer.style.display = 'block';
            
            // Scroll to results
            resultContainer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
        
        function showError(message) {
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.textContent = message;
            errorMessage.style.display = 'block';
            
            // Scroll to error
            errorMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
        
        // Security: Prevent XSS attacks
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Allow pressing Enter to submit
        document.getElementById('jobNumber').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                trackJob();
            }
        });
        
        // Pre-fill with URL parameter if present (optional feature)
        window.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const jobParam = urlParams.get('job');
            if (jobParam) {
                document.getElementById('jobNumber').value = jobParam;
                // Auto-search if you want (uncomment next line):
                // setTimeout(() => trackJob(), 500);
            }
        });
    </script>
